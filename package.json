{
  "name": "BeepBoopBot",
  "version": "1.0.0",
  "description": "Help B3 find his way home programming a robot",
  "main": "index.js",
  "engines": {
    "node": "6.2.1"
  },
  "scripts": {
    "start": "node server/index",
    "watch": "concurrently 'npm run build:watch' 'npm run build-css:watch' 'npm run dev-nm'",
    "serve": "budo ./public",
    "dev": "concurrently 'npm run build:watch' 'npm run build-css:watch' 'npm run dev-nm'",
    "dev-nm": "nodemon server/index",
    "build-css": "node-sass --include-path scss client/scss/main.scss public/resources/styles/style.css",
    "build-css:watch": "nodemon -e scss -x \"npm run build-css\"",
    "build": "cd client && webpack --progress --profile --colors",
    "build:watch": "cd client && webpack --progress --profile --colors --watch",
    "test": "babel-tape-runner client/test/*.js | tap-spec",
    "prepare-deploy": "npm run build-css && npm run build"
  },
  "author": "olwiba, troy-lamerton, Miles Fitzsimons, Sean, Vai",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "express": "^4.14.0",
    "react": "^15.2.1",
    "react-cookie": "^0.4.7",
    "react-dom": "^15.2.1",
    "react-motion": "^0.4.4",
    "react-motion-loop": "^1.0.0",
    "react-redux": "^4.4.5",
    "react-skylight": "^0.4.0",
    "react-sound": "^0.5.1",
    "redux": "^3.5.2",
    "redux-sounds": "^1.1.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-tape-runner": "^2.0.1",
    "colors": "^1.1.2",
    "deep-freeze": "0.0.1",
    "enzyme": "^2.4.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "react-addons-test-utils": "^15.2.1",
    "redux-logger": "^2.6.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1",
    "concurrently": "?1.0.0"
  }
}
